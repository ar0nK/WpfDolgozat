<Window x:Class="WpfDolgozat.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfDolgozat"
        mc:Ignorable="d"
        Title="Dolgozatok" Height="450" Width="550">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="60"/>
            <RowDefinition Height="60"/>
        </Grid.RowDefinitions>
        <DataGrid x:Name="dataGrid" Grid.Row="0"/>
        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="10">
            <Label Content="Név:" Margin="5"/>
            <TextBox x:Name="nevInput" Width="200" Margin="5"/>
            <Label Content="Életkor:" Margin="5"/>
            <TextBox x:Name="eletkorInput" Width="50" Margin="5"/>
            <Label Content="Pontszám:" Margin="5"/>
            <TextBox x:Name="pontszamInput" Width="50" Margin="5"/>

        </StackPanel>
        <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="10">
            <Button Content="Hozzáadás" Click="Hozzaadas" Width="80" Margin="5" Padding="5"/>
            <Button Content="Mentés" Click="Mentes" Width="80" Margin="5" Padding="5"/>
        </StackPanel>
    </Grid>
</Window>
